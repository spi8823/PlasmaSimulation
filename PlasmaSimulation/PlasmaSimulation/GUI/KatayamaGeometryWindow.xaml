<Window x:Class="PlasmaSimulation.GUI.KatayamaGeometryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlasmaSimulation.GUI"
        mc:Ignorable="d"
        Title="KatayamaGeometryWindow" Height="690" Width="440" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <GroupBox Header="放電管" Width="400">
            <local:CylinderReflectorSettingPanel x:Name="NozzleSettingPanel" ID="0"/>
        </GroupBox>
        <GroupBox Header="円筒" Width="400">
            <local:CylinderReflectorSettingPanel x:Name="ReflectorSettingPanel" ID="1"/>
        </GroupBox>
        <GroupBox Header="遮蔽板" Width="400">
            <local:ShieldSettingPanel x:Name="ShieldSettingPanel" ID="2"/>
        </GroupBox>
        <GroupBox Header="ターゲット" Width="400">
            <local:ShieldSettingPanel x:Name="TargetSettingPanel" ID="3"/>
        </GroupBox>
        <Button Content="ジオメトリを見る" Width="120" Height="24" FontSize="12" Click="Button_Click" Margin="10" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
